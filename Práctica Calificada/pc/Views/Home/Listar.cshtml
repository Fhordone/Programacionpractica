@model IEnumerable<pc.Models.Create>
<h2>Lista Contactos</h2>



<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.loan_date)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.original_amount)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.rate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.total_amount)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.status)
                </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model)
{
        <tr>
            <th scope="row">#</th>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.loan_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.original_amount)
            </td>  
            <td>
                @Html.DisplayFor(modelItem => item.rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>                                   
        </tr>
}        
    </tbody>
</table>